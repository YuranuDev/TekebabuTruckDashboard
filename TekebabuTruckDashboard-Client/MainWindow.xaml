<Window x:Class="TekebabuTruckDashboard_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TekebabuTruckDashboard_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Background="Black"
        Loaded="Window_Loaded">
    <Viewbox Stretch="Uniform">
        <Grid Background="#FF0E0E0E" Width="1920" Height="1080">

            <!-- Hazard Lamp -->
            <Button 
                Tag="1"
                PreviewTouchDown="Button_Pressed"
                PreviewTouchUp="Button_Released"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="229" Width="350" Background="#FF840000" Margin="27,32,0,0">
                <Image Source="/Images/blinker.png" Width="90" Height="154"/>
            </Button>

            <!-- Parking Brake -->
            <Button 
                Tag="2"
                PreviewTouchDown="Button_Pressed"
                PreviewTouchUp="Button_Released"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="505" Width="350" Background="#FF383838" Margin="27,0,0,0">
                <Image Source="/Images/pbrake.png" Width="90" Height="154"/>
            </Button>

            <!-- Grid Panel1-->
            <Grid Margin="0,838,0,0" Background="#FF151515">

                <!-- Cruise Cont. Set -->
                <Button 
                    Tag="3"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="149" Background="#FF383838">
                    <Image Source="/Images/cruisecont.png" Width="90" Height="154"/>
                </Button>

                <!-- Cruise Cont. Up-->
                <Button Content="+"
                    Tag="4"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103" Width="111" Background="#FF383838" Margin="160,14,0,0" FontSize="72" Foreground="White"/>

                <!-- Cruise Cont. Down-->
                <Button Content="-"
                    Tag="5"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103" Width="111" Background="#FF383838" Margin="160,125,0,0" Foreground="White" FontSize="72" FontWeight="Bold">
                </Button>

                <!-- Air Horn -->
                <Button 
                    Tag="6"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="353" Background="#FF383838" Margin="342,0,0,0">
                    <Image Source="/Images/air_horn.png" Width="76" Height="69" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Beacon Light -->
                <Button 
                    Tag="7"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="130" Background="#FF383838" Margin="759,0,0,0">
                    <Image Source="/Images/beacon.png" Width="90" Height="154"/>
                </Button>

                <!-- Differential Lock -->
                <Button 
                    Tag="8"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="130" Background="#FF383838" Margin="909,0,0,0">
                    <Image Source="/Images/differential_lock.png" Width="76" Height="69" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>

                <!-- Up Axis -->
                <Button 
                    Tag="9"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="130" Background="#FF383838" Margin="1060,0,0,0">
                    <Image Source="/Images/up_axis.png" Width="90" Height="154"/>
                </Button>

                <!-- Front Suspention Up -->
                <Button
                    Tag="10"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103" Width="111" Background="#FF383838" Margin="1212,14,0,0" Foreground="White" FontSize="72" FontWeight="Bold">
                    <Image Source="/Images/Sfront_up.png" Height="80" Width="88"/>
                </Button>

                <!-- Front Suspention Down -->
                <Button
                    Tag="11"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103" Width="111" Background="#FF383838" Margin="1212,125,0,0" Foreground="White" FontSize="72" FontWeight="Bold">
                    <Image Source="/Images/Sfront_down.png" Height="80" Width="88"/>
                </Button>

                <!-- Rear Suspention Up -->
                <Button
                    Tag="12"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103" Width="111" Background="#FF383838" Margin="1331,14,0,0" Foreground="White" FontSize="72" FontWeight="Bold">
                    <Image Source="/Images/Sback_up.png" Height="80" Width="88"/>
                </Button>

                <!-- Rear Suspention Down -->
                <Button
                    Tag="13"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103" Width="111" Background="#FF383838" Margin="1331,125,0,0" Foreground="White" FontSize="72" FontWeight="Bold">
                    <Image Source="/Images/Sback_down.png" Height="80" Width="88"/>
                </Button>

                <!-- Suspention Reset -->
                <Button 
                    Tag="14"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="130" Background="#FF383838" Margin="1456,0,0,0">
                    <Image Source="/Images/suspention.png" Width="90" Height="154"/>
                </Button>

                <!-- Power Switch -->
                <Button 
                    Tag="15"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="214" Width="232" Background="#FF383838" Margin="1661,0,0,0">
                    <Image Source="/Images/power.png" Width="90" Height="154"/>
                </Button>
                
                <Label Content="RESET" HorizontalAlignment="Left" Margin="1456,173,0,0" VerticalAlignment="Top" Width="130" HorizontalContentAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Noto Sans JP"/>
            </Grid>

            <!-- Radio Control -->
            <Grid Margin="438,32,1048,288" Background="#FF171717">
                <Label Content="Radio Control" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="107" Width="414" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Noto Sans JP Black" FontSize="56"/>

                <!-- Radio On/Off -->
                <Button 
                    Tag="16"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="143" Width="414" Background="#FF383838" Margin="0,170,0,0">
                    <Image Source="/Images/power.png" Width="90" Height="154"/>
                </Button>

                <!-- Resume Favorite -->
                <Button 
                    Tag="17"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="154" Width="192" Background="#FF383838" Margin="13,334,0,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/audio_triangle.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>

                <!-- Next Favorite-->
                <Button 
                    Tag="18"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="155" Width="194" Background="#FF383838" Margin="229,332,0,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/audio_triangle.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Volume Down -->
                <Button 
                Tag="19"
                PreviewTouchDown="Button_Pressed"
                PreviewTouchUp="Button_Released"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="154" Width="192" Background="#FF383838" Margin="13,508,0,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/volume_down.png" Width="77" Height="101"/>
                </Button>

                <!-- Volume Up -->
                <Button 
                    Tag="20"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="154" Width="192" Background="#FF383838" Margin="230,507,0,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/volume_up.png" Width="90" Height="101"/>
                </Button>
            </Grid>

            <!-- Map Control -->
            <Grid Margin="934,32,37,288" Background="#FF171717">
                <Label Content="Map Control&#xD;&#xA;" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="112" Width="929" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Noto Sans JP Black" FontSize="72"/>

                <!-- Map -->
                <Button 
                    Tag="21"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="14,175,765,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/map.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Job -->
                <Button 
                    Tag="22"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="202,175,577,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/job.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Diagnostics -->
                <Button 
                    Tag="23"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="389,175,390,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/phone.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Messages -->
                <Button 
                    Tag="24"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="577,175,202,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/messages.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Chat -->
                <Button 
                    Tag="25"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="764,175,15,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/chat.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Zoom Out -->
                <Button 
                    Tag="26"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="15,366,579,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/zoom_out.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Time Control -->
                <Button 
                    Tag="27"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="389,366,390,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/clock.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Zoom In -->
                <Button 
                    Tag="28"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="155" Background="#FF383838" Margin="579,365,15,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Image Source="/Images/zoom_in.png" Width="104" Height="86" RenderTransformOrigin="0.5,0.5"/>
                </Button>

                <!-- Visible Control -->
                <Button 
                    Tag="29"
                    PreviewTouchDown="Button_Pressed"
                    PreviewTouchUp="Button_Released"
                    VerticalAlignment="Top"
                    Height="124" Background="#FF383838" Margin="796,620,19,0" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.318"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.502"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Label Content="Visible&#xD;&#xA;Control" FontSize="24" Foreground="White" FontFamily="Noto Sans JP Medium" Width="108" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
